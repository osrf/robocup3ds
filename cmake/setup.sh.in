# This file setup gazebo and gazebo plugin environment variables needed by
# gazebo for robocup3ds

if [ -f @GAZEBO_PREFIX@/share/gazebo/setup.sh ]; then
  . @GAZEBO_PREFIX@/share/gazebo/setup.sh
elif [ -f /usr/share/gazebo/setup.sh ]; then
  . /usr/share/gazebo/setup.sh
else
  echo "Warning: failed to find Gazebo's setup.sh.  You will need to source it manually. Afterwards, source share/robocup3ds/setup.sh again."
fi

# Add our top-level directory to GAZEBO_RESOURCE_PATH so that its
# worlds/* media/materials/* stuff can be found.
export GAZEBO_RESOURCE_PATH=@CMAKE_INSTALL_PREFIX@/share/@PROJECT_NAME@:$GAZEBO_RESOURCE_PATH

# Add the directories containing our Gazebo plugins to GAZEBO_PLUGIN_PATH.
export GAZEBO_PLUGIN_PATH=@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_LIBDIR@/@PROJECT_NAME@:$GAZEBO_PLUGIN_PATH

# Models are installed in ${CMAKE_INSTALL_PREFIX}/share/robocup3ds/models
export GAZEBO_MODEL_PATH=@CMAKE_INSTALL_PREFIX@/share/@PROJECT_NAME@/models:$GAZEBO_MODEL_PATH
